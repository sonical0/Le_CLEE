{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary-900",
          "color": "#1F3448",
          "name": "Bleu primaire foncé"
        },
        {
          "slug": "primary-500",
          "color": "#5E7E9F",
          "name": "Bleu primaire moyen"
        },
        {
          "slug": "primary-50",
          "color": "#E5F0FF",
          "name": "Bleu primaire clair"
        },
        {
          "slug": "grey-900",
          "color": "#131927",
          "name": "Gris foncé"
        },
        {
          "slug": "grey-600",
          "color": "#4B5563",
          "name": "Gris moyen"
        },
        {
          "slug": "grey-300",
          "color": "#D1D5DB",
          "name": "Gris clair"
        },
        {
          "slug": "grey-50",
          "color": "#F9FAFB",
          "name": "Gris très clair"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "Blanc"
        }
      ],
      "gradients": [],
      "duotone": [],
      "custom": true,
      "customGradient": false
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Barlow Condensed\", Helvetica, Arial, sans-serif",
          "slug": "barlow-condensed",
          "name": "Barlow Condensed"
        },
        {
          "fontFamily": "\"Roboto\", Helvetica, Arial, sans-serif",
          "slug": "roboto",
          "name": "Roboto"
        },
        {
          "fontFamily": "\"Inter\", Helvetica, Arial, sans-serif",
          "slug": "inter",
          "name": "Inter"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Petit"
        },
        {
          "slug": "normal",
          "size": "18px",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "24px",
          "name": "Moyen"
        },
        {
          "slug": "large",
          "size": "32px",
          "name": "Grand"
        },
        {
          "slug": "x-large",
          "size": "48px",
          "name": "Très grand"
        },
        {
          "slug": "xx-large",
          "size": "64px",
          "name": "Extra grand"
        }
      ],
      "customFontSize": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "padding": true,
      "margin": true,
      "blockGap": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "custom": {
      "spacing": {
        "small": "1rem",
        "medium": "2rem",
        "large": "4rem",
        "x-large": "6rem"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--grey-900)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--roboto)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "1.5rem"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary-500)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-900)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary-900)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto)",
          "fontSize": "16px",
          "fontWeight": "600"
        },
        "border": {
          "radius": "8px"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "bottom": "12px",
            "left": "24px",
            "right": "24px"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-500)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--barlow-condensed)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        },
        "color": {
          "text": "var(--wp--preset--color--primary-900)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--barlow-condensed)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "spacing": {
          "margin": {
            "bottom": "1.25rem"
          }
        },
        "color": {
          "text": "var(--wp--preset--color--primary-900)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--barlow-condensed)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        },
        "color": {
          "text": "var(--wp--preset--color--primary-900)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--barlow-condensed)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        },
        "spacing": {
          "margin": {
            "bottom": "0.875rem"
          }
        },
        "color": {
          "text": "var(--wp--preset--color--primary-900)"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "lineHeight": "1.7"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "core/button": {
        "border": {
          "radius": "8px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary-900)",
          "text": "var(--wp--preset--color--white)"
        }
      },
      "core/buttons": {
        "spacing": {
          "blockGap": "1rem"
        }
      },
      "core/columns": {
        "spacing": {
          "blockGap": "2rem"
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "2rem",
            "bottom": "2rem"
          }
        }
      }
    }
  }
}
